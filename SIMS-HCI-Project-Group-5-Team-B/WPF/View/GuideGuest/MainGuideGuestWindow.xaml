<Window x:Class="SIMS_HCI_Project_Group_5_Team_B.WPF.View.GuideGuest.MainGuideGuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_HCI_Project_Group_5_Team_B.WPF.View.GuideGuest"
        mc:Ignorable="d"
        x:Name="GuideGuestWindowFrame" Title="MainGuideGuestWindow" Height="450" Width="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="BackButton" Content="Back" Grid.Row="0" Grid.Column="0"/>
            <Button x:Name="NotificationsButton" Content="Notifications" Grid.Row="0" Grid.Column="1"/>
            <Button x:Name="HomeButton" Content="Home" Grid.Row="0" Grid.Column="2"/>
            <TextBox x:Name="SearchTextBox" Grid.Row="0" Grid.Column="3" Margin="10, 0, 10, 0"/>
            <Button x:Name="YourProfileButton" Content="Your profile" Grid.Row="0" Grid.Column="4"/>
        </Grid>
        <Frame x:Name="MainFrame" DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
